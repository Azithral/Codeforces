#define REP(i,n)     FOR(i,0,n)

int main()
{
    int n;
    cin>>n;

    if(n>10 && n<20)
    {
        cout<<4<<endl;
        return 0;
    }
    if(n<=10 || n>21)
    {
        cout<<0<<endl;
        return 0;
    }
    if(n == 20)
    {
        cout<<15<<endl;
        return 0;
    }
    if(n == 21)
    {
        cout<<4<<endl;
        return 0;
    }
}
